<li>
    <h2>{{title}}</h2>
    <p>{{description}}</p>
    <p>Código: {{code}}</p>
    <p>Precio: ${{price}}</p>
    <p>Estado: {{#if status}}Disponible{{else}}No Disponible{{/if}}</p>
    <p>Stock: {{stock}} unidades</p>
    <p>Categoría: {{category}}</p>
    <p>Imágenes:</p>
    <ul>
        {{#each thumbnails}}
        <li><img src="{{this}}" alt="Imagen del producto"></li>
        {{/each}}
    </ul>
</li>